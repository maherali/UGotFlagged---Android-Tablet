<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="match_parent" android:id="@+id/frags">

	<FrameLayout android:id="@+id/left_frag"
		android:layout_marginTop="?android:attr/actionBarSize"
		android:layout_width="@dimen/simple_user_size" android:layout_height="match_parent">
	</FrameLayout>


	<FrameLayout android:id="@+id/middle_frag"
		android:layout_marginTop="?android:attr/actionBarSize"
		android:layout_width="@dimen/medium_stream_size" android:layout_height="match_parent">
	</FrameLayout>


	<FrameLayout android:id="@+id/right_frag"
		android:layout_marginTop="?android:attr/actionBarSize"
		android:layout_width="match_parent" android:layout_height="match_parent">
	</FrameLayout>

</LinearLayout>
