<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:layout_centerHorizontal="true">

	<LinearLayout android:background="@drawable/picture_frame"
		android:id="@+id/frame" android:layout_width="fill_parent"
		android:layout_marginTop="10dip" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:orientation="vertical"
		android:layout_height="wrap_content">

		<ImageView android:id="@+id/icon" android:layout_width="48dip"
			android:layout_height="48dip" android:paddingTop="5dip"
			android:paddingBottom="5dip" android:paddingLeft="5dip"
			android:paddingRight="5dip" />

		<TextView android:id="@+id/user_name" android:textColor="@color/user_name"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:singleLine="true" android:paddingLeft="6dip" />

		<TextView android:id="@+id/post_title" android:textColor="@color/post_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:singleLine="true" android:paddingLeft="6dip" />

		<TextView android:id="@+id/text1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:ellipsize="end"
			android:textColor="@color/post_text" android:paddingLeft="6dip" />


		<LinearLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="fill_parent">

			<FrameLayout android:layout_height="match_parent"
				android:layout_width="match_parent">
				<ImageView android:id="@+id/license_plate_image"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal" android:paddingTop="20dip"
					android:paddingBottom="20dip" />

				<TextView android:id="@+id/plate_no" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_gravity="center_horizontal|center_vertical"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:paddingTop="20dip" android:paddingBottom="20dip"
					android:textColor="@color/black" />


				<ImageView android:id="@+id/post_type"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:paddingRight="200dip" android:paddingTop="20dip" android:paddingLeft="0dip"/>

			</FrameLayout>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="fill_parent">
			<ImageView android:id="@+id/picture" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:paddingTop="20dip" android:paddingBottom="20dip" />

		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="wrap_content">
			<ImageView android:src="@drawable/comment" android:id="@+id/post_comments_image"
				android:layout_width="20dip" android:layout_height="20dip"
				android:paddingTop="5dip" android:paddingBottom="5dip"
				android:paddingLeft="5dip" android:paddingRight="5dip" />

			<TextView android:id="@+id/post_comments_count"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingRight="6dip" android:textColor="@color/stats_color" />

			<ImageView android:src="@drawable/vote_yes" android:id="@+id/post_users_image"
				android:layout_width="20dip" android:layout_height="20dip"
				android:paddingTop="5dip" android:paddingBottom="5dip"
				android:paddingLeft="6dip" android:paddingRight="5dip" />

			<TextView android:id="@+id/post_users_favs"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/stats_color" />
		</LinearLayout>

		<TextView android:layout_width="wrap_content"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_height="wrap_content" android:text="Comments"
			android:textAppearance="?android:attr/textAppearanceLarge" />


		<LinearLayout android:orientation="vertical" android:id="@+id/replies"
			android:padding="10dip" android:layout_marginTop="5dip"
			android:layout_height="wrap_content" android:layout_width="fill_parent">
		</LinearLayout>


	</LinearLayout>
</ScrollView>