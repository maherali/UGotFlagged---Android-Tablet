<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">



	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/first_layout">

		<TextView android:layout_width="150dip"
			android:layout_height="wrap_content" android:textSize="22dp"
			android:textColor="#ffffffff" android:text="User Name" android:id="@+id/label1"
			android:layout_alignBaseline="@id/user_name" />

		<EditText android:id="@+id/user_name" android:inputType="textEmailAddress"
			android:hint="User Name" android:layout_width="300dip"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/label1"
			android:textColor="#ffffffff" />

	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/second_layout" android:layout_below="@id/first_layout"
		android:layout_marginTop="20dip">

		<TextView android:layout_width="150dip" android:id="@+id/label2"
			android:layout_height="wrap_content" android:textSize="22dp"
			android:textColor="#ffffffff" android:text="Password"
			android:layout_alignBaseline="@id/user_name" />

		<EditText android:id="@+id/password" android:password="true"
			android:hint="Password" android:layout_width="300dip"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/label2"
			android:textColor="#ffffffff" />
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/third_layout" android:layout_below="@id/second_layout"
		android:layout_marginTop="20dip">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="22dp"
			android:textColor="#ffffffff" android:text="@string/tnc" />
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/fourth_layout" android:layout_below="@id/third_layout"
		android:layout_marginTop="20dip">

		<View android:layout_width="450dip" android:layout_height="2dip"
			android:background="@color/white">
		</View>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/fifth_layout" android:layout_below="@id/fourth_layout"
		android:layout_marginTop="20dip">

		<CheckBox android:text="Remember me" android:id="@+id/rememberme"
			android:layout_below="@id/password" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</CheckBox>
		<Button android:layout_width="wrap_content" android:id="@+id/login_submit"
			android:layout_height="wrap_content" android:text="@string/login_submit"></Button>
	</LinearLayout>


	<!-- <LinearLayout android:layout_width="600dip" android:layout_marginLeft="400dip" 
		android:layout_height="wrap_content" android:orientation="horizontal"> </LinearLayout> -->

</RelativeLayout>